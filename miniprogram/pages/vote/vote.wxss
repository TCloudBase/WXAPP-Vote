page{
  display: flex;
  background:#F3F4F8;
  width: 100%;
  height: 100%;
}
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.title {
  font-size:40rpx;
  font-weight: 900;
  width: calc(100% - 60rpx);
  padding: 80rpx 30rpx 40rpx;
}
.options {
  width: 100%;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
}
.options button {
  display: flex;
  width: 100% !important;
  margin-bottom: 20rpx;
  background: #FFFFFF;
  border-radius: 0 !important;
  text-align: left;
  font-size: 27rpx;
  font-weight: 500;
  line-height: 70rpx;
  padding:15rpx 30rpx;
  height: 100rpx;
}
.options button:active{
  background:#ececec;
  color:inherit;
}
.options button[type='select']{
  background:#c5d6ff;
}
.options button[type='loading']{
  background:#ffd2d2;
}
.options button text {
  width: 80%;
}
.options button span {
  width: 20%;
  text-align: right;
  font-size: 25rpx;
  color: #545454;
}



.spinner {
  width: 200rpx;
  height: 200rpx;
  margin: auto;
  background-color: #5586ff;
  border-radius: 100%; 
  -webkit-animation: scaleout 1.0s infinite ease-in-out;
  animation: scaleout 1.0s infinite ease-in-out;
}
@-webkit-keyframes scaleout {
  0% { -webkit-transform: scale(0.0) }
  100% {
    -webkit-transform: scale(1.0);
    opacity: 0;
  }
}
@keyframes scaleout {
  0% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 100% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
    opacity: 0;
  }
}


.showinfo{
  width: 80%;
  margin: 30% auto;
  text-align: center;
}
.showinfo text {
  font-size:30rpx;
  color:#343434;
  line-height: 50rpx;
  letter-spacing: 3rpx;
}
.showinfo navigator {
  height: 85rpx;
  width: 400rpx;
  margin: 80rpx auto;
  background: #5586ff;
  color:#FFFFFF;
  line-height: 85rpx;
  font-size: 32rpx;
}